  <body>
    <header>
      <%- include('./partials/navbar') %>
    </header>
  
  <div id="home"></div>
    <main>
        <section class="principal">
            <div class="imagens">
                <h2>PREENCHA OS SEUS DADOS E COMECE A GANHAR MUITOS CLIENTES AGORA MESMO!</h2>
                <img id="check" src="images/check-3.png" alt="">
            </div>
        </section>
        <section class="formulario container">
            <div class="form">
                <h4 class="formh4">FORMULÁRIO DE CADASTRO</h4>
                <form class="input" action="">
                    <input type="text" placeholder="Digite seu nome Completo">
                    <input type="email" placeholder="Digite seu E-mail">
                    <input type="number" placeholder="Digite seu Telefone/WhatsApp">
                    <input type="number" placeholder="Digite seu CPF/CNPJ">
                    <input type="text" placeholder="Digite seu endereço">
                    <input type="text" placeholder="Linkedin/Curriculo Lattes">
                </form>
                <button id="send">Enviar Solicitação</button>
            </div>
        </section>

        <div class="container-final">
            <div class="container-estatisticas">
              <div class="parceiros">
                <p id="letra-maior">+1500</p>
                <p>Parceiros</p>
              </div>
              <div class="parceiros">
                <p id="letra-maior">99%</p>
                <p>Pessoas Atendidas em menos de 24horas</p>
              </div>
              <div class="parceiros">
                <p id="letra-maior">27</p>
                <p>Presente em todos os estados Brasileiros</p>
              </div>
              <div class="parceiros">
                <p id="letra-maior">+100.000</p>
                <p>Usuários</p>
              </div>
        </div>
    </main>


    <%- include('./partials/footer') %>
