<!-- Contato Section -->
<div class="consult-container container consult-white" style="padding:128px 16px" id="contato">
    <h3 class="consult-center">Contato</h3>
    <p class="consult-center consult-large">Para Dúvidas, Reclamações ou Sugestões preencha o formulário abaixo</p>
    <div style="margin-top:48px">
      <form action="/" method="POST" name="formulario">
        <p>
          <input class="consult-input consult-border consult-azul-aqua-lg-input" type="text" id="nome" placeholder="Nome"  name="nome" pattern="[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$">
          <% if (locals.errors && errors.nome) { %>
            <div class="error">
                <span><%= errors.nome.msg %></span>
            </div>
          <% } %>
        </p>
       <div class="desk">
        <div class="wd-100">
          <p class="emailIn">
            <input class="consult-input2 consult-border consult-azul-aqua-lg-input consult-margin-right wd-100" type="email" id="email" placeholder="Email" name="email">
            
          </p>
          <p class="telIn">
            <input class="consult-input2 consult-border consult-azul-aqua-lg-input wd-100" type="tel" placeholder="Telefone" id="telefone" name="telefone" pattern="[0-9]+$">
          </p>
          </div>
        <div class="d-flex wd-100">
          <% if (locals.errors && errors.email) { %>
            <span class="error wd-50"><%= errors.email.msg %></span>
          <% } %>
          <% if (locals.errors && errors.telefone) { %>
            <span class="error wd-50"><%= errors.telefone.msg %></span>
          <% } %>
        </div>
       </div> 
       <div class="mob">
          <div class="wd-100">
            <p class="emailIn">
              <input class="consult-input2 consult-border consult-azul-aqua-lg-input consult-margin-right wd-100" type="email" id="email" placeholder="Email" name="email">
              
            </p>
            <div class="d-flex wd-100">
              <% if (locals.errors && errors.email) { %>
                <span class="error wd-50"><%= errors.email.msg %></span>
              <% } %>
            </div>
            <p class="telIn">
              <input class="consult-input2 consult-border consult-azul-aqua-lg-input wd-100" type="tel" placeholder="Telefone" id="telefone" name="telefone" pattern="[0-9]+$">
            </p>
            </div>
          <div class="d-flex wd-100">
            <% if (locals.errors && errors.telefone) { %>
              <span class="error wd-50"><%= errors.telefone.msg %></span>
            <% } %>
          </div>
        </div>
        <p><textarea class="consult-input consult-border consult-azul-aqua-lg-input" type="text" placeholder="Mensagem" id="mensagem" name="mensagem"></textarea>
          <% if (locals.errors && errors.mensagem) { %>
            <div class="error">
                <span><%= errors.mensagem.msg %></span>
            </div>
        <% } %>
        </p>
        <p>
          <button class="botaoEnviaForm consult-button consult-verde consult-round-xlarge" type="submit">
            <i class="fa fa-paper-plane"></i> ENVIAR MENSAGEM
          </button>
        </p>
      </form>
     
    </div>
  </div>